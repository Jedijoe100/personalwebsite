doctype html
html(lang='en')
  head
    link(rel='shortcut icon', type="image/png" href='/images/Crest.png')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/registry.css')
    meta(charset='UTF-8')
    title Joe and Myah wedding registry
    script(src='https://polyfill.io/v3/polyfill.min.js?features=es6')
    script#MathJax-script(async='', src='https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js')
  body
    div(id='registry_selection')
      form(method="post", id="UpdateRegistry")
        -console.log(info);
        each item in info
          if !item.isClaimed
            input(type="checkbox", class="registry_boxes", id=item.ID, name=item.ID, value=item.Item)
          label !{item.Item}
          br
        input(type="submit", value="Submit")
    script(src="http://code.jquery.com/jquery-3.1.0.min.js")
    script(src='/javascripts/registry.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
